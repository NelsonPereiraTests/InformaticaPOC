{
  "swagger": "2.0",
  "info": {
    "title": "Euromonitor Auth",
    "version": "1.0"
  },
  "host": "api.euromonitor.com",
  "basePath": "/authentication/connect",
  "schemes": ["https"],
  "paths": {
    "/token": {
      "post": {
        "summary": "Obter token OAuth",
        "consumes": ["application/x-www-form-urlencoded"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "username",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "password",
            "in": "formData",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Token recebido",
            "schema": {
              "type": "object",
              "properties": {
                "access_token": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
